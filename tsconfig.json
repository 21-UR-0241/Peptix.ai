{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["server/**/*.ts", "src/**/*.ts", "src/**/*.mts", "server/routes.js", "server/routes.js"]
}